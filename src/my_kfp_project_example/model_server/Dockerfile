# Generated by KFP.

FROM pytorch/pytorch:2.7.1-cuda11.8-cudnn9-runtime

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    wget \
    && rm -rf /var/lib/apt/lists/*

# Install Python dependencies
RUN pip install --no-cache-dir \
    kserve==0.13.1 \
    mlflow==2.20 \
    boto3==1.37.1 \
    python-dotenv

# Copy the models directory first (needed for MLflow model loading)
COPY models/ /app/models/

# Copy the model server script
COPY model_server.py /app/model_server.py

# Make the script executable
RUN chmod +x /app/model_server.py

# Set environment variables
ENV PYTHONPATH=/app:$PYTHONPATH

# Expose the default KServe port
EXPOSE 8080

# Start the model server
CMD ["python", "/app/model_server.py"]
